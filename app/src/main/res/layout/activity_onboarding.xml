<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onboarding_bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/onboarding_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:id="@+id/onboarding_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculate_with_clarity"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/onboarding_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_tagline_text"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:alpha="0.7"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <!-- Card 1: Core & Scientific -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="24dp"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="34dp">

                <FrameLayout
                    android:id="@+id/icon_container_core"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icon_card_bg"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_core"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/card_icon"
                        app:tint="@color/icon_tint" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/title_row_core"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/card_title_core"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/new_badge_core"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_text"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/new_badge_bg"
                            android:textColor="@color/background"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/card_desc_core"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_description"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Card 2: Camera Solver -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="24dp"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:id="@+id/icon_container_camera"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icon_card_bg"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_camera"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/card_icon"
                        app:tint="@color/icon_tint" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/title_row_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/card_title_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/new_badge_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_text"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/new_badge_bg"
                            android:textColor="@color/background"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/card_desc_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_description"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Card 3: Mathly AI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="24dp"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:id="@+id/icon_container_ai"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icon_card_bg"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_ai"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/card_icon"
                        app:tint="@color/icon_tint" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/title_row_ai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/card_title_ai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/new_badge_ai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_text"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/new_badge_bg"
                            android:textColor="@color/background"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/card_desc_ai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_description"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/getStartedBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:background="@drawable/btn_gradient">

        <Button
            android:id="@+id/getStartedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_started_btn"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:gravity="center"/>
    </FrameLayout>
</RelativeLayout> 