<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="24dp">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@color/accent_purple_bb86fc"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:alpha="0.8" />

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ› Report Bug"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Bug Title Input (Required) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bug Title *"
        android:textColor="@color/accent_purple_bb86fc"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bug_title_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter a clear, concise bug title"
        app:boxStrokeColor="@color/accent_purple_bb86fc"
        app:hintTextColor="@color/text_muted_a0a0a0"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bug_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#2A2A2A" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Bug Description Input (Required) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bug Description *"
        android:textColor="@color/accent_purple_bb86fc"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bug_description_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Describe the bug in detail. Include steps to reproduce."
        app:boxStrokeColor="@color/accent_purple_bb86fc"
        app:hintTextColor="@color/text_muted_a0a0a0"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bug_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="4"
            android:maxLines="8"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="16dp"
            android:gravity="top"
            android:background="#2A2A2A" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Priority and Category Side by Side -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority &amp; Category *"
        android:textColor="@color/accent_purple_bb86fc"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <!-- Priority Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bug_priority_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Priority"
            app:boxStrokeColor="@color/accent_purple_bb86fc"
            app:hintTextColor="@color/text_muted_a0a0a0"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:endIconMode="dropdown_menu"
            app:endIconTint="@color/accent_purple_bb86fc">

            <AutoCompleteTextView
                android:id="@+id/bug_priority_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="#2A2A2A" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bug_category_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Category"
            app:boxStrokeColor="@color/accent_purple_bb86fc"
            app:hintTextColor="@color/text_muted_a0a0a0"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:endIconMode="dropdown_menu"
            app:endIconTint="@color/accent_purple_bb86fc">

            <AutoCompleteTextView
                android:id="@+id/bug_category_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="#2A2A2A" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Device Info Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“± Device Information"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/device_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading device info..."
            android:textColor="#B0AEC0"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_bug_report"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/accent_purple_bb86fc"
            app:strokeColor="@color/accent_purple_bb86fc"
            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_bug_report"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="ðŸ“¤ Submit Report"
            android:backgroundTint="@color/accent_purple_bb86fc"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            android:alpha="0.5" />

    </LinearLayout>

</LinearLayout>