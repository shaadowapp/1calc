<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Top AppBar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#111111"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/header_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feedback"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.03" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Feedback Icon -->
            <ImageView
                android:id="@+id/feedback_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_feedback"
                android:contentDescription="Feedback Icon"
                app:tint="#5D2DC8"
                android:scaleType="centerInside" />

            <!-- Heading -->
            <TextView
                android:id="@+id/feedback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We Value Your Feedback"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/feedback_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:justificationMode="inter_word"
                android:textAlignment="center"
                android:text="Help us shape the future of 1Calculator! Whether it's a suggestion, a feature request, or a bug report â€” weâ€™d love to hear from you.\n\nReach us at feedback@1calculator.app or leave a review on the Play Store.\n\nThank you for supporting us!"
                tools:ignore="JustificationMode" />

            <!-- Divider -->
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="#444444" />

            <!-- Optional Footer -->
            <TextView
                android:id="@+id/feedback_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your voice helps us grow ðŸ’œ"
                android:textSize="13sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textAlignment="center" />

            <!-- CTA: Email -->
            <Button
                android:id="@+id/cta_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Feedback"
                android:textColor="#FFFFFF"
                android:backgroundTint="#5D2DC8"
                android:layout_gravity="center_horizontal"
                android:elevation="2dp"
                android:layout_marginTop="18dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
