<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mathly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg_gradient"
    tools:context=".mathly.MathlyFragment">

    <!-- Header: Logo + Title -->
    <LinearLayout
        android:id="@+id/voice_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/bg_chat_header_card"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/mathly_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mathly_logo"
            android:contentDescription="Mathly Logo"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/mathly_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mathly_greeting"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center" />

        <ImageView
            android:id="@+id/voice_settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:layout_marginStart="12dp"
            app:iconSize="18dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Status: Listening... -->
    <TextView
        android:id="@+id/mathly_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listening"
        android:textColor="#B3FFFFFF"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/voice_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Mic Button with Glow/Pulse -->
    <FrameLayout
        android:id="@+id/mic_button_container"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toBottomOf="@id/mathly_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Glow background (for pulse animation, handled in Kotlin) -->
        <View
            android:id="@+id/mic_glow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mic_glow_bg"
            android:alpha="0.7" />

        <!-- Mic circle -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mic_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic_purple"
                app:tint="#7B1FA2" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Transcription Box -->
    <TextView
        android:id="@+id/transcription_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="45dp"
        android:padding="18dp"
        android:background="@drawable/transcription_box_bg"
        android:text="@string/sample_math_question"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mic_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.92" />

    <!-- Button Row (moved to bottom above auto-start) -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/footer_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_listen"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:icon="@drawable/ic_microphone"
            app:iconPadding="8dp"
            android:text="@string/start_listening"
            android:textColor="#FFFFFF"
            android:backgroundTint="#212121"
            app:cornerRadius="32dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#212121"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:icon="@drawable/ic_stop"
            app:iconPadding="8dp"
            android:text="@string/stop"
            android:textColor="#FFFFFF"
            android:backgroundTint="#212121"
            app:cornerRadius="32dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#212121"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_repeat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:icon="@drawable/ic_repeat"
            app:iconPadding="8dp"
            android:text="@string/repeat"
            android:textColor="#FFFFFF"
            android:backgroundTint="#212121"
            app:cornerRadius="32dp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#212121"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Footer: Only Auto-start with Switch -->
    <LinearLayout
        android:id="@+id/footer_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.92">

        <!-- Auto-start Switch with icon and label -->
        <Switch
            android:id="@+id/switch_autostart"
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:thumbTint="#7B1FA2"
            android:trackTint="#B3FFFFFF"
            android:focusable="false"
            android:clickable="true"
            android:scaleX="0.8"
            android:scaleY="0.8" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_start"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Blank state for deactivated Mathly Voice -->
    <FrameLayout
        android:id="@+id/blank_state_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/blank_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathly Voice is currently not activated, please turn it on from settings screen."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btn_open_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open settings"
                android:backgroundTint="#7B42F6"
                android:textColor="#FFFFFF"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 