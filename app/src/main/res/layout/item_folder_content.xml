<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/card_bg_2a2833"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- File/Folder Icon -->
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_folder"
            android:background="@drawable/icon_bg_5"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:tint="@color/white_ffffff" />

        <!-- Content Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Name -->
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document.pdf"
                android:textColor="@color/text_light_f2f2f2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="My Document.pdf" />

            <!-- Details -->
            <TextView
                android:id="@+id/item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ 2.5 MB"
                android:textColor="@color/text_muted_b0aec0"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                tools:text="ðŸ“„ 2.5 MB" />

        </LinearLayout>

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/item_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/text_muted_b0aec0" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>