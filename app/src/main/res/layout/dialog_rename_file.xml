<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/file_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="File name"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/card_bg_2a2833"
        app:boxStrokeColor="@color/accent_purple_bb86fc"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/accent_purple_bb86fc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/file_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_f2f2f2"
            android:textColorHint="@color/text_muted_b0aec0"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>