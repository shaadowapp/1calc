<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Modern AppBar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#111111"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/header_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About Us"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.03" />
    </LinearLayout>

    <!-- Stylish Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App Logo"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#5D2DC8"
                android:scaleType="centerInside" />

            <!-- Title -->
            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1Calculator"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/about_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:justificationMode="inter_word"
                android:textAlignment="center"
                android:text="1Calculator is your intelligent math and utility companion â€“ a blend of scientific calculator, unit converter, finance toolkit, and much more. Built for students, professionals, and smart users like you.\n\nEnjoy a clean, fast, privacy-focused experience with an interface designed for productivity. We simplify your calculations so you can focus on what matters.\n\nContinuously refined by the Shaadow Team based on real feedback from users like you. Your trust powers our innovation. ðŸ’œ"
                tools:ignore="JustificationMode" />

            <!-- Divider -->
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="#444444" />

            <!-- Footer Info -->
            <TextView
                android:id="@+id/about_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0\nCrafted by Shaadow Team"
                android:textSize="13sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textAlignment="center" />

            <!-- CTA Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/cta_playstore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Store"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#5D2DC8"
                    android:layout_marginEnd="12dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/cta_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#333333"
                    android:layout_marginEnd="12dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/cta_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#333333"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
