<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/settings_card_background">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Hidden Gallery Security"
        android:textColor="@color/text_light_f2f2f2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your preferred security method"
        android:textColor="@color/text_muted_b0aec0"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="24dp" />

    <!-- Security Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Password Option -->
        <LinearLayout
            android:id="@+id/password_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_marginEnd="16dp"
                app:tint="@color/text_light_e0e0e0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/text_light_e0e0e0"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set a custom password for protection"
                    android:textColor="@color/text_muted_a0a0a0"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                android:rotation="270"
                app:tint="@color/text_muted_a0a0a0" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_muted_a0a0a0"
            android:alpha="0.3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- PIN Option -->
        <LinearLayout
            android:id="@+id/pin_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_grid"
                android:layout_marginEnd="16dp"
                app:tint="@color/text_light_e0e0e0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN"
                    android:textColor="@color/text_light_e0e0e0"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set a 4-digit PIN for quick access"
                    android:textColor="@color/text_muted_a0a0a0"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                android:rotation="270"
                app:tint="@color/text_muted_a0a0a0" />
        </LinearLayout>



    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/text_muted_a0a0a0"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout>
