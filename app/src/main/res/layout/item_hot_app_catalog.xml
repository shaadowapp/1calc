<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_chat_header_card"
    android:layout_margin="8dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_music_note"
        android:background="@drawable/bg_round_dark"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FavTunes"
        android:textColor="@color/white_ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintEnd_toStartOf="@id/btn_expand"
        app:layout_constraintTop_toTopOf="@id/app_icon" />

    <ImageButton
        android:id="@+id/btn_expand"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/arrow_down_float"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Expand details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_icon"
        app:tint="@color/white_ffffff" />

    <TextView
        android:id="@+id/app_short_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Music player with playlist management"
        android:textColor="@color/white_ffffff"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <TextView
        android:id="@+id/app_full_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A comprehensive music player app with advanced playlist management, audio equalizer, and offline playback capabilities."
        android:textColor="@color/white_ffffff"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_short_desc" />

    <LinearLayout
        android:id="@+id/features_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_full_desc" />

    <TextView
        android:id="@+id/btn_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET ON PLAY STORE"
        android:textColor="@color/white_ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_purple"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintTop_toBottomOf="@id/features_container" />

</androidx.constraintlayout.widget.ConstraintLayout>