<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Recovery"
        android:textColor="@color/text_light_e0e0e0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer your security question to recover access to Hidden Gallery."
        android:textColor="@color/text_muted_a0a0a0"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Security Question Display -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Question:"
        android:textColor="@color/text_light_e0e0e0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/security_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your mother's maiden name?"
        android:textColor="@color/text_muted_a0a0a0"
        android:textSize="16sp"
        android:background="@drawable/question_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Answer Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Answer"
        android:textColor="@color/text_light_e0e0e0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recovery_answer_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/card_bg_2a2833"
        app:boxStrokeColor="@color/accent_purple_bb86fc"
        app:hintTextColor="@color/text_muted_a0a0a0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recovery_answer_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your answer"
            android:textColor="@color/text_light_e0e0e0"
            android:textColorHint="@color/text_muted_a0a0a0"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- PIN Hint Display (if available) -->
    <LinearLayout
        android:id="@+id/pin_hint_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN Hint:"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/pin_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth year + favorite number"
            android:textColor="@color/text_muted_a0a0a0"
            android:textSize="14sp"
            android:background="@drawable/hint_background"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Error Message -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incorrect answer. Please try again."
        android:textColor="@color/error"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_recovery_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/text_muted_a0a0a0"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verify_answer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textColor="@color/white"
            app:backgroundTint="@color/accent_purple_bb86fc" />

    </LinearLayout>

</LinearLayout>
