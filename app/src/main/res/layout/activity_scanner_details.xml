<?xml version="1.0" encoding="utf-8"?>
<!-- Scanner Details Activity Layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:paddingHorizontal="18dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="@android:color/black"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:tint="@color/text_light_e0e0e0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invoice Details"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>



        <!-- Shop Details Section (Expandable) -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_round_dark"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/section_shop_details_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/tv_shop_details_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shop Details (Optional)"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
                <ImageView
                    android:id="@+id/iv_shop_expand"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_shop_details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#23242A"
                android:radius="0dp"
                android:paddingVertical="6dp"
                android:visibility="gone">
                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shop Name"
                    android:textColorHint="#B0B3C6"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif" />
                <EditText
                android:id="@+id/et_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Address"
                android:textColorHint="#B0B3C6"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>


        <!-- Customer Details Section (Expandable) -->
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_round_dark"
        android:padding="16dp"
        android:layout_marginTop="18dp">
        <LinearLayout
            android:id="@+id/section_customer_details_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/tv_customer_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer Details (Optional)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />
            <ImageView
                android:id="@+id/iv_customer_expand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                app:tint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_customer_details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#23242A"
            android:radius="0dp"
            android:paddingVertical="6dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/et_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"
                android:textColorHint="#B0B3C6"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:fontFamily="sans-serif" />
            <EditText
                android:id="@+id/et_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColorHint="#B0B3C6"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:inputType="textEmailAddress"
                android:fontFamily="sans-serif" />
            <EditText
                android:id="@+id/et_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textColorHint="#B0B3C6"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:inputType="phone"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>


        <!-- Purchased Items Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased Items"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_error_box"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_round_dark"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Item ID: 123456"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹12.99"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="16dp" />

                        <ImageButton
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_delete"
                            app:tint="#F44336"
                            android:contentDescription="Remove" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: Sample product description"
                        android:textColor="#B0B3C6"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/bg_round_dark"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Item ID: 987654"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹7.49"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="16dp" />

                        <ImageButton
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_delete"
                            app:tint="#F44336"
                            android:contentDescription="Remove" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: Another sample product"
                        android:textColor="#B0B3C6"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Item 3 -->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/bg_round_dark"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item ID: 555888"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹19.99"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="16dp" />

                    <ImageButton
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_delete"
                        app:tint="#F44336"
                        android:contentDescription="Remove" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: Premium product item"
                    android:textColor="#B0B3C6"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Pricing Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pricing Details"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_error_box"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹40.47"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount (Optional)"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <EditText
                        android:id="@+id/et_discount"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="0%"
                        android:textColorHint="#B0B3C6"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:inputType="number"
                        android:gravity="end"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B0B3C6"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹40.47"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Inline Download/Share Buttons -->
        <LinearLayout
            android:id="@+id/inline_button_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_download_invoice"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_rounded"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginEnd="16dp" />
            <ImageButton
                android:id="@+id/btn_share_invoice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_mic_button"
                android:src="@drawable/ic_share"
                app:tint="@android:color/white"
                android:contentDescription="Share Invoice" />
        </LinearLayout>
    </LinearLayout>
</ScrollView> 