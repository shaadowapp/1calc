<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center">

    <!-- Loading Animation -->
    <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:indeterminateTint="@color/accent_purple_bb86fc"
        style="?android:attr/progressBarStyle" />

    <!-- Title -->
    <TextView
        android:id="@+id/loading_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exporting Gallery"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/loading_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creating password-protected ZIP file...\nThis may take a few moments."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp" />

    <!-- Progress Text -->
    <TextView
        android:id="@+id/progress_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preparing files..."
        android:textSize="12sp"
        android:textColor="@color/text_muted_b0aec0"
        android:gravity="center" />

</LinearLayout>