<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0A0E1A"
    android:clickable="true"
    android:focusable="true"
    android:elevation="100dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_solid_back_button"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:tint="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-20dp">

        <!-- Lock Icon -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_lock_icon_container"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hidden Gallery"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/lock_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your PIN to continue"
            android:textColor="#B0FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="40dp"
            android:gravity="center" />

        <!-- Password Input (for password mode) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#FF1C2128"
            app:boxStrokeColor="#FF2D3748"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="26dp"
            app:boxCornerRadiusTopEnd="26dp"
            app:boxCornerRadiusBottomStart="26dp"
            app:boxCornerRadiusBottomEnd="26dp"
            app:hintTextColor="#70FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                android:textColor="#FFFFFF"
                android:textColorHint="#70FFFFFF"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot PIN/Password Button (for password mode) -->
        <TextView
            android:id="@+id/forgot_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#FF4A90E2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- PIN Input Display (for PIN mode) -->
        <LinearLayout
            android:id="@+id/pin_display_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/pin_digit_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_pin_digit_solid"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/pin_digit_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_pin_digit_solid"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/pin_digit_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_pin_digit_solid"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/pin_digit_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_pin_digit_solid"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- PIN Keypad (for PIN mode) -->
        <LinearLayout
            android:id="@+id/pin_keypad_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="visible">

            <!-- Row 1: 1, 2, 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/pin_btn_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button" />

            </LinearLayout>

            <!-- Row 2: 4, 5, 6 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/pin_btn_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button" />

            </LinearLayout>

            <!-- Row 3: 7, 8, 9 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/pin_btn_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/pin_btn_9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button" />

            </LinearLayout>

            <!-- Row 4: empty, 0, backspace -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/fingerprint_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_fingerprint"
                    android:background="@drawable/bg_solid_backspace_button"
                    android:contentDescription="Fingerprint"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="20dp"/>

                <Button
                    android:id="@+id/pin_btn_0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_solid_keypad_button"
                    android:layout_marginEnd="20dp" />

                <ImageButton
                    android:id="@+id/button_backspace"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_backspace"
                    android:background="@drawable/bg_solid_backspace_button"
                    android:contentDescription="Backspace"
                    app:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Forgot PIN/Password Button -->
        <TextView
            android:id="@+id/forgot_pin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot PIN/Password?"
            android:textColor="#FF4A90E2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center" />

    </LinearLayout>

