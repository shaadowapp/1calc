<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_glassy_lock_screen"
    android:fitsSystemWindows="false"
    android:clipToPadding="false">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_glassy_back_button_improved"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:tint="#FFFFFF"
        android:elevation="8dp"
        android:padding="10dp" />

    <!-- Glassy overlay container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_glassy_container"
        android:gravity="center"
        android:padding="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:elevation="12dp">

    <!-- Lock Icon with glow effect -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- Glow effect background -->
        <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_lock"
            android:layout_gravity="center"
            app:tint="#40FFFFFF"
            android:alpha="0.6" />

        <!-- Main icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_lock"
            android:layout_gravity="center"
            app:tint="#FFFFFF" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidden Gallery"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="8dp"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/lock_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your PIN to continue"
        android:textColor="#E0FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Password Input (for password mode) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#30FFFFFF"
        app:boxStrokeColor="#60FFFFFF"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="#80FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- PIN Input Display (for PIN mode) -->
    <LinearLayout
        android:id="@+id/pin_display_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/pin_digit_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pin_digit_background"
            android:gravity="center"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/pin_digit_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pin_digit_background"
            android:gravity="center"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/pin_digit_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pin_digit_background"
            android:gravity="center"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/pin_digit_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pin_digit_background"
            android:gravity="center"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- PIN Keypad (for PIN mode) -->
    <LinearLayout
        android:id="@+id/pin_keypad_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:visibility="visible">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/pin_btn_1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/pin_btn_4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_6"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/pin_btn_7"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_8"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pin_btn_9"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Row 4: empty, 0, backspace -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/pin_btn_0"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/bg_number_button"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/pin_btn_backspace"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_backspace"
                android:background="@drawable/bg_backspace_button"
                android:contentDescription="Backspace"
                android:elevation="2dp"
                app:tint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Fingerprint Section -->
    <LinearLayout
        android:id="@+id/fingerprint_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone">

        <!-- OR Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#60FFFFFF"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#60FFFFFF"
                android:alpha="0.6" />

        </LinearLayout>

        <!-- Fingerprint Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fingerprint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Fingerprint"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_glassy_fingerprint_transparent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:icon="@drawable/ic_fingerprint"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Submit Button (for password mode) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_glassy_button_ripple"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_glassy_button_ripple"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>
