<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/settings_header_background">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/settings_text_primary_light" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textColor="@color/settings_text_primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Preferences Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preferences"
                    android:textColor="@color/settings_text_secondary_light"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Theme Mode -->
                    <LinearLayout
                        android:id="@+id/theme_mode_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/theme_mode"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/theme_mode_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/auto"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />



                    <!-- Default home screen -->
                    <LinearLayout
                        android:id="@+id/calculator_mode_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_home_screen_dialog"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/calculator_mode_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/basic_calculator"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <!-- Hidden Gallery Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hidden Gallery"
                    android:textColor="@color/settings_text_secondary_light"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Open Hidden Gallery Button -->
                    <LinearLayout
                        android:id="@+id/open_hidden_gallery_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gallery"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/settings_text_primary_light" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open Hidden Gallery"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Access your encrypted media files"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="270"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>


                    <!-- Setup Recovery Question Button -->
                    <LinearLayout
                        android:id="@+id/setup_recovery_question_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/settings_text_secondary_light"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Setup Recovery Question"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set up security question for PIN/password recovery"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/settings_text_secondary_light" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Show Hidden Gallery Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Hidden Gallery Button"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display hidden gallery button in home features section"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/hidden_gallery_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- About App Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_app"
                    android:textColor="@color/settings_text_secondary_light"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Privacy & Permissions -->
                    <LinearLayout
                        android:id="@+id/privacy_permissions_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/privacy_permissions"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Clear Cache -->
                    <LinearLayout
                        android:id="@+id/clear_cache_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clear Cache"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/cache_size_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculating..."
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- App Version -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="App Version"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/app_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_version"
                            android:textColor="@color/settings_text_secondary_light"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />


                    <!-- Check for Updates -->
                    <LinearLayout
                        android:id="@+id/check_updates_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/check_for_updates"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Feedback -->
                    <LinearLayout
                        android:id="@+id/feedback_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
        android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feedback"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Report Bug -->
                    <LinearLayout
                        android:id="@+id/report_bug_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Report Bug"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider_light"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Rate Us -->
                    <LinearLayout
                        android:id="@+id/rate_us_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rate_us"
                            android:textColor="@color/settings_text_primary_light"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Apps by Shaadow Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPS BY SHAADOW"
                    android:textColor="@color/settings_text_secondary_light"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- FavTunes App -->
                    <LinearLayout
                        android:id="@+id/favtunes_app_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/favtunes_logo"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FavTunes"
                                android:textColor="@color/settings_text_primary_light"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your personal music player with playlist management"
                                android:textColor="@color/settings_text_secondary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/settings_text_secondary_light" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>