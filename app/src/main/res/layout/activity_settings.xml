<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#000000">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/text_light_e0e0e0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textColor="@color/text_light_e0e0e0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Preferences Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preferences"
                    android:textColor="@color/text_muted_a0a0a0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Theme Mode -->
                    <LinearLayout
                        android:id="@+id/theme_mode_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/theme_mode"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/theme_mode_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/auto"
                                android:textColor="@color/text_muted_a0a0a0"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Default home screen -->
                    <LinearLayout
                        android:id="@+id/calculator_mode_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_home_screen_dialog"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/calculator_mode_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/basic_calculator"
                                android:textColor="@color/text_muted_a0a0a0"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Advanced Customization Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advanced_customization"
                    android:textColor="@color/text_muted_a0a0a0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Dropdown Header -->
                    <LinearLayout
                        android:id="@+id/advanced_customization_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mathly"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/advanced_customization_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="180"
                            android:contentDescription="Expand"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <!-- Dropdown Content -->
                    <LinearLayout
                        android:id="@+id/advanced_customization_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_ffffff"
                            android:alpha="0.1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" />

                        <!-- Mathly Voice -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/voice"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/mathly_voice_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_color" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_ffffff"
                            android:alpha="0.1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" />

                        <!-- Mathly Chat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/chat"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/mathly_chat_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_color" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_ffffff"
                            android:alpha="0.1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" />

                        <!-- Mathly Scanner -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/scanner"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/mathly_scanner_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_color" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- About App Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_app"
                    android:textColor="@color/text_muted_a0a0a0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background">

                    <!-- Privacy & Permissions -->
                    <LinearLayout
                        android:id="@+id/privacy_permissions_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/privacy_permissions"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Clear Cache -->
                    <LinearLayout
                        android:id="@+id/clear_cache_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clear Cache"
                                android:textColor="@color/text_light_e0e0e0"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/cache_size_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculating..."
                                android:textColor="@color/text_muted_a0a0a0"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- App Version -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="App Version"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/app_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_version"
                            android:textColor="@color/text_muted_a0a0a0"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Mathly Version -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mathly Version"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/mathly_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0"
                            android:textColor="@color/text_muted_a0a0a0"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Check for Updates -->
                    <LinearLayout
                        android:id="@+id/check_updates_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/check_for_updates"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Feedback -->
                    <LinearLayout
                        android:id="@+id/feedback_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
        android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feedback"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_ffffff"
                        android:alpha="0.1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Rate Us -->
                    <LinearLayout
                        android:id="@+id/rate_us_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rate_us"
                            android:textColor="@color/text_light_e0e0e0"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_muted_a0a0a0" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout> 