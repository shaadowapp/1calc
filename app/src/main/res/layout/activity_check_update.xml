<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Top AppBar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#111111"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/header_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check for Update"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.03" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Update Icon -->
            <ImageView
                android:id="@+id/update_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_update"
                android:contentDescription="Update Icon"
                app:tint="#5D2DC8"
                android:scaleType="centerInside" />

            <!-- App Version Info -->
            <TextView
                android:id="@+id/current_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youâ€™re using the latest version"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/update_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1Calculator keeps getting better with every release. Stay updated to enjoy the latest features, bug fixes, and performance improvements. \n\nMake sure auto-updates are enabled in the Play Store, or check manually to never miss new enhancements."
                android:textColor="#CCCCCC"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:justificationMode="inter_word"
                android:textAlignment="center"
                tools:ignore="JustificationMode" />

            <!-- Divider -->
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="#444444" />

            <!-- Footer -->
            <TextView
                android:id="@+id/last_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last checked: Just now"
                android:textSize="13sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textAlignment="center" />

            <!-- CTA: Play Store -->
            <Button
                android:id="@+id/cta_playstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open in Play Store"
                android:textColor="#FFFFFF"
                android:backgroundTint="#5D2DC8"
                android:layout_gravity="center_horizontal"
                android:elevation="2dp"
                android:layout_marginTop="18dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
