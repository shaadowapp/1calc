<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_mathly_logo"
            android:background="@drawable/circle_background_on"
            android:padding="4dp"
            app:tint="@color/white"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Mathly Logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="320dp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_ai_bubble_gradient"
                    android:gravity="center_vertical" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/ai_action_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:visibility="visible"
                android:layout_marginTop="2dp">
                <ImageButton
                    android:id="@+id/btn_copy"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:iconSize="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_copy"
                    android:contentDescription="Copy"
                    android:tint="@color/text_hint"
                    android:padding="6dp"
                    android:layout_marginEnd="1dp" />
                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:iconSize="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_thumb_up"
                    android:contentDescription="Like"
                    android:tint="@color/text_hint"
                    android:padding="6dp"
                    android:layout_marginEnd="1dp" />
                <ImageButton
                    android:id="@+id/btn_dislike"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:iconSize="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_thumb_down"
                    android:contentDescription="Dislike"
                    android:tint="@color/text_hint"
                    android:padding="6dp"
                    android:layout_marginEnd="1dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 