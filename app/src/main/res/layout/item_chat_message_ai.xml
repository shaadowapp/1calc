<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mathly_logo"
            android:background="@drawable/circle_background_on"
            android:padding="6dp"
            app:tint="@color/brand_purple"
            android:layout_marginEnd="8dp"
            android:contentDescription="Mathly Logo" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/popup_background"
            app:strokeColor="@color/brand_purple"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:padding="18dp"
                android:maxWidth="320dp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ai_action_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="visible"
        android:layout_marginTop="2dp">
        <ImageButton
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_copy"
            android:contentDescription="Copy"
            android:tint="@color/white"
            android:padding="0dp"
            android:layout_marginEnd="8dp" />
        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_thumb_up"
            android:contentDescription="Like"
            android:tint="@color/white"
            android:padding="0dp"
            android:layout_marginEnd="8dp" />
        <ImageButton
            android:id="@+id/btn_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_thumb_down"
            android:contentDescription="Dislike"
            android:tint="@color/white"
            android:padding="0dp"
            android:layout_marginEnd="8dp" />
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_share"
            android:contentDescription="Share"
            android:tint="@color/white"
            android:padding="0dp" />
    </LinearLayout>

</LinearLayout> 