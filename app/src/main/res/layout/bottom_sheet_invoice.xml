<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_glassy_input"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_invoice_actions_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice actions"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- PDF icon and file name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="18dp">
        <ImageView
            android:id="@+id/pdf_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pdf_placeholder"
            android:contentDescription="PDF Icon"
            app:tint="@color/category_grey" />
        <TextView
            android:id="@+id/tv_pdf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invoice.pdf"
            android:textColor="@color/text_muted_a0a0a0"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Download and share buttons inline, share on right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="18dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download_invoice"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Download"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_download"
            app:iconGravity="textStart"
            app:iconSize="21dp"
            app:iconPadding="8dp"
            app:cornerRadius="28dp"
            android:backgroundTint="#23242A"
            android:padding="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_invoice"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/ic_share"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:cornerRadius="50dp"
            android:backgroundTint="#23242A"
            android:padding="0dp"
            app:iconPadding="2dp"
            android:gravity="center"
            android:text=""
            android:layout_marginStart="12dp"
            android:contentDescription="Share" />
    </LinearLayout>

    <!-- Share subheader -->
    <TextView
        android:id="@+id/tv_share_subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Manual share apps list -->
    <GridLayout
        android:id="@+id/grid_manual_share_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:padding="0dp"/>

</LinearLayout> 