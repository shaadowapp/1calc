<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark_1a1a1a">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/card_bg_2a2833"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/white_ffffff" />

        <!-- Folder Name -->
        <TextView
            android:id="@+id/folder_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photos"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Menu"
            app:tint="@color/white_ffffff" />

    </LinearLayout>

    <!-- Selection Toolbar -->
    <LinearLayout
        android:id="@+id/selection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/accent_color"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone">

        <!-- Close Selection Button -->
        <ImageButton
            android:id="@+id/btn_close_selection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close selection"
            app:tint="@color/white_ffffff" />

        <!-- Selection Count -->
        <TextView
            android:id="@+id/selection_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 selected"
            android:textColor="@color/white_ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete selected"
            app:tint="@color/white_ffffff"
            android:layout_marginEnd="8dp" />

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/btn_share_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            android:contentDescription="Share selected"
            app:tint="@color/white_ffffff" />

    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- Empty Folder Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_folder_open"
                android:layout_marginBottom="16dp"
                app:tint="@color/text_muted_b0aec0" />

            <!-- Empty Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder is Empty"
                android:textColor="@color/text_light_f2f2f2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Empty Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add files to this folder to see them here"
                android:textColor="@color/text_muted_b0aec0"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Add Files Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Files"
                android:textColor="@color/white_ffffff"
                app:backgroundTint="@color/brand_blue"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/white_ffffff" />

        </LinearLayout>

        <!-- Content List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contents_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_encrypted_file" />

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Add content"
            app:backgroundTint="@color/brand_blue"
            app:tint="@color/white_ffffff"
            app:elevation="8dp" />

    </FrameLayout>

</LinearLayout>