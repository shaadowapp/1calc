<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#60A8E6"
                android:endColor="#4088C7" />
            <stroke
                android:width="2dp"
                android:color="#80A8E6" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#4088C7"
                android:endColor="#2068A8" />
            <stroke
                android:width="1dp"
                android:color="#60A8E6" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</selector>
