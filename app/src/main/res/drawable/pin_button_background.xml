<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/text_muted_a0a0a0" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/card_bg_2a2833" />
            <stroke
                android:width="1dp"
                android:color="@color/text_muted_a0a0a0" />
        </shape>
    </item>
    
</selector>
