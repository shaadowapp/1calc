<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberKey">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpecialFunction">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MathOperator">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EqualsOperator">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionOperator">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/subtle_text</item>
        <item name="android:backgroundTint">@color/button_vlight_bg</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonCalcInline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/muted_border</item>
    </style>

    <style name="WidgetCalcButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/muted_border</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetCalcButtonWhite">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/button_vlight_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetCalcButtonGrid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetCalcButtonGridOperator" parent="WidgetCalcButtonGrid">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.SuggestionChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/chip_gradient_stroke</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">#F3F4F6</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipMinHeight">44dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="closeIconEnabled">false</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIcon">@null</item>
    </style>

    <style name="DialogStyle.Todo" parent="Theme.MaterialComponents.DayNight.Dialog.Alert" />

</resources>